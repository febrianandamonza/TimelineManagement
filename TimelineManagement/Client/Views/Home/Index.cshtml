@{
    ViewData["Title"] = "Home Page";
}

<div class="container-xxl flex-grow-1 container-p-y">
	<input type="hidden" id="jwtToken" value='@Context.Session.GetString("JWToken")'>
	<div class="d-flex flex-wrap">
		<div class="col-sm-6 col-lg-4 mb-4">
			<div class="card card-border-shadow-primary h-100">
				<div class="card-body d-flex align-items-center justify-content-between">
					<div class="avatar">
						<span class="avatar-initial rounded bg-label-primary"><i class="bx bx-folder-open"></i></span>
					</div>
					<div class="text-center">
						<h4 id="totalProjects" class="mb-0">Loading...</h4>
						<p class="mb-0">Total Project</p>
					</div>
				</div>
			</div>	
		</div>
		<div class="col-sm-6 col-lg-4 mb-4">
			<div class="card card-border-shadow-warning h-100">
				<div class="card-body d-flex align-items-center justify-content-between">
					<div class="avatar">
						<span class="avatar-initial rounded bg-label-danger"><i class='bx bx-task-x'></i></span>
					</div>
					<div class="text-center">
						<h4 id="taskUnFinished" class="mb-0">Loading...</h4>
						<p class="mb-0">Unfinished Task</p>
					</div>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-lg-4 mb-4">
			<div class="card card-border-shadow-danger h-100">
				<div class="card-body d-flex align-items-center justify-content-between">
					<div class="avatar">
						<span class="avatar-initial rounded bg-label-success"><i class='bx bx-task'></i></span>
					</div>
					<div class="text-center">
						<h4 id="taskFinished" class="mb-0">Loading...</h4>
						<p class="mb-0">Finish Task</p>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row ml-1">
		<!-- Order Statistics -->
		<div class="col">
			<div class="row">
				<div class="col-md-7 col-lg-6 col-xl-4 order-0 mb-4">
					<div class="card">
						<div class="card-header d-flex align-items-center justify-content-between pb-0">
							<div class="card-title mb-0">
								<div class="card-title mb-0">
									<h5 class="m-0 me-2">Project Statistic</h5>
								</div>
							</div>
						</div>
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-center mb-3">
								<div class="d-flex flex-column align-items-center">
									<h2 id="totalProjects2" class="mb-2 mt-2"></h2>
									<span style="font-size: 20px">Total Projects</span>
								</div>
								<div id="orderStatisticsChart" class="mt-3"></div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-8">
					<div class="card ">
						<div class="card-body">
							<div id="calendar"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



@section Scripts{
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	@if (TempData["Success"] != null)
	{
		<script type="text/javascript">
			toastr.success('@TempData["Success"]');
		</script>
	}



}
@section CSS{
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
}