@model TimelineManagement.DTOs.Account.ChangePasswordDto

@{
    ViewData["Title"] = "ChangePasword";
    Layout = "_LayoutChangePassword";
}

@if (TempData["Success"] != null)
{
    <div class="toast align-items-center text-white bg-success top-0 end-0 border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["Success"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <form id="formAuthentication" class="mb-3" action="/Account/ChangePassword/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label form-label"></label>
                <input asp-for="Email" class="form-control" type="text" placeholder="Enter your email or username" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-3 form-password-toggle">
                <div class="d-flex justify-content-between">
                    <label asp-for="NewPassword" class="control-label form-label"></label>
                </div>
                <div class="input-group input-group-merge">
                    <input asp-for="NewPassword" class="form-control" type="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="confirm password" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
            </div>
            <div class="form-group mb-3 form-password-toggle">
                <div class="d-flex justify-content-between">
                    <label asp-for="ConfirmPassword" class="control-label form-label"></label>
                </div>
                <div class="input-group input-group-merge">
                    <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="confirm password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Otp" class="control-label"></label>
                <input asp-for="Otp" class="form-control" />
                <span asp-validation-for="Otp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>