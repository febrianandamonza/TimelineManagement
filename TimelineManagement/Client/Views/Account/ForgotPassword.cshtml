@model TimelineManagement.DTOs.Account.ForgotPasswordDto

@{
    ViewData["Title"] = "ForgotPasword";
    Layout = "_LayoutForgotPassword";
}


@if (TempData["Success"] != null)
{
    <div class="toast align-items-center text-white bg-success top-0 end-0 border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                @TempData["Success"]
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <form id="formAuthentication" class="mb-3" action="/Account/ForgotPassword/" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="control-label form-label"></label>
                <input asp-for="Email" class="form-control" type="text" placeholder="Enter your email or username" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p class="text-center">
        <span>Back to </span>
        <a href="/Account/Login/">
            <span>Login</span>
        </a>
    </p>
</div>
