@{
        ViewData["Title"] = "Project";
    Layout = "_LayoutAllProject";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col-md-12">
            @if (User.IsInRole("Project Manager"))
            {
                <button type="button" class="btn btn-primary ml-3 mt-3 mb-3" data-toggle="modal" data-target="#createModal" style="width:fit-content">Create New Project</button>
            }
            <input type="hidden" id="jwtToken" value='@Context.Session.GetString("JWToken")'>
            <div class="content2">
                <div class="row" id="projectCard2"></div>
            </div>

        </div>
    </div>
</div>


