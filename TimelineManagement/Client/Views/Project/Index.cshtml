            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="UpdateProject()" data-bs-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>

